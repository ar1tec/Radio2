<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.oucho.radio2"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RadioApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".RadioActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:mimeType="audio/*"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.mp3"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.aac"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.pls"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.m3u"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.m3u8"
                    android:scheme="http" />
                <data
                    android:mimeType="audio/*"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.mp3"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.aac"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.pls"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.m3u"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.m3u8"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".filepicker.FilePickerActivity"
            android:label="@string/select_file"
            android:theme="@style/AppThemeFilePicker" />

        <service android:name=".PlayerService" />

        <receiver
            android:name=".receiver.StopReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="org.oucho.radio2.STOP" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.NewRadioReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="org.oucho.radio2.ADD_RADIO" />
            </intent-filter>
        </receiver>

        <activity android:name=".RadioListActivity">
        </activity>
    </application>

</manifest>