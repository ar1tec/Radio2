<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/controls_bg_dark"
    android:gravity="left|top"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/notif_ombre"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_radio_white_36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="7dp"
        android:paddingLeft="9dp"
        tools:ignore="ContentDescription" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_name"
        android:textSize="13.5dp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notif_ombre"
        android:layout_marginStart="9dp"
        android:id="@+id/notif_name"
        android:paddingTop="14dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã©tat du lecteur"
        android:textSize="12sp"
        android:textColor="@color/white_10"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notif_ombre"
        android:layout_marginStart="9dp"
        android:id="@+id/notif_text"
        android:paddingTop="32dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notif_touch"
        android:textSize="12sp"
        android:textColor="@color/white_10"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:paddingTop="40dp"
        android:paddingRight="5dp"
        tools:ignore="HardcodedText" />


</RelativeLayout>