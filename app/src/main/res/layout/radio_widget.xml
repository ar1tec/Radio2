<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/layout_bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="9dp"
        android:paddingTop="7dp"
        android:src="@drawable/ic_radio_grey_600_24dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/logo"
        android:layout_toStartOf="@id/control"
        android:orientation="vertical"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name"
            android:textSize="15sp"
            android:textColor="@color/grey_800"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="9dp"
            android:paddingTop="14dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã©tat du lecteur"
            android:textSize="13sp"
            android:textColor="@color/grey_600"
            android:gravity="center"
            android:layout_marginStart="9dp"
            android:paddingTop="2dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_stop_grey_800_36dp"
            android:tint="@color/colorAccent"/>

        <ImageView
            android:id="@+id/playpause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_play_circle_filled_grey_800_36dp"
            android:tint="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>